#include <stdio.h>
int main()
{
    int i=4, *j, *k;
    j=&i;
    j=j-2;
    j=j-5;
    k=j-6;
    printf("Value of i:%d\n", i);
    printf("Address of i:%d\n", &i);
    printf("Value of j:%d\n", j);
    printf("Address of j:%d\n", &j);
    printf("Value of k:%d\n", k);
    printf("Address of k:%d\n", &k);
}
